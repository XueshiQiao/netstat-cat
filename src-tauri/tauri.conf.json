{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-utils/schema.json",
  "productName": "Netstat Cat",
  "version": "0.1.0",
  "identifier": "me.xueshi.netstat-cat",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Netstat Cat",
        "width": 900,
        "height": 670,
        "center": true,
        "decorations": true,
        "visible": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 20.0, "y": 28.0 }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "../resources/entitlements.mac.plist",
      "minimumSystemVersion": "10.13"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVBMkNGQkRBNDcyMkFDNjkKUldScHJDSkgydnNzV3FFNmVxZEZsWmp6dzBCMjYzellHOEZDekFkd09oZWlWRC9BWmN6T0NtU2gK",
      "endpoints": [
        "https://github.com/XueshiQiao/netstat-cat/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
